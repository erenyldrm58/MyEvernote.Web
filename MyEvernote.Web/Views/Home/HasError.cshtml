
@{
    ViewBag.Title = "HATA OLUŞTU";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @{ 
            Exception ex = null;

            if (TempData["LastError"] != null)
            {
                ex = TempData["LastError"] as Exception;
            }
        }

        <h1><span class="glyphicon glyphicon-remove">  </span> Hata Oluştu </h1>
        <p>
            Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.
            <br /><br />

            @if (ex != null)
            {
                <strong> Hata Detay : </strong> @ex.Message
                <br /><br /><br />
            }

            @MyHtmlHelper.LinkButton("/Home/Index", "default", "", "", "home", "Ana Sayfaya Git!")
            @MyHtmlHelper.LinkButton("mailto:admin@mailinator.com", "primary", "", "", "envolope", "E-posta Gönder")
        </p>
    </div>
</div>